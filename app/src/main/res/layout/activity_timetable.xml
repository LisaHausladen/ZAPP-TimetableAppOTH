                    android:id="@+id/TextViewTime"
                    android:text="Zeit"></TextView>
                <TextView
                    android:id="@+id/TextViewDay1"
                    android:text="@string/monday"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:id="@+id/TextViewDay2"
                    android:text="@string/tuesday"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:id="@+id/TextViewDay3"
                    android:text="@string/wednesday"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:id="@+id/TextDay4"
                    android:text="@string/thursday"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/textDay5"
                    android:text="@string/friday"
                    android:textStyle="bold"></TextView>
            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:id="@+id/tableRowLesson1"
                android:layout_width="match_parent">
                <TextView
                    android:text="8:15-9:45"
                    android:id="@+id/textViewLesson1"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:id="@+id/mondayLesson1"
